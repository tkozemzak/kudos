generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String
  profile   Profile
  authoredKudos Kudo[] @relation("AuthoredKudos")
  kudos Kudo[] @relation("ReceivedKudos")
}

type Profile {
  firstName String
  lastName  String
}

model Kudo {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  message String
  createdAt DateTime @default(now())
  style KudoStyle?
  author  User @relation(references: [id], fields: [authorId], "AuthoredKudos")
  authorId  String @db.ObjectId
  recipient User @relation(references: [id], fields: [recipientId], "ReceivedKudos")
  recipientId String @db.ObjectId
}

enum Emoji {
  THUMBSUP
  PARTY
  HANDSUP
}

enum Department {
  MARKETING
  SALES
  ENGINEERING
  HR
}

enum Color {
  RED
  GREEN
  YELLOW
  BLUE
  WHITE
}

type KudoStyle {
  backgroundCOlor Color @default(YELLOW)
  textColor Color @default(WHITE)
  emoji Emoji @default(THUMBSUP)
}

